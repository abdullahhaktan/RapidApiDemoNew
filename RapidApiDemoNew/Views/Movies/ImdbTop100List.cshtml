@model List<ImdbMovieViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IMDb Top 100</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: radial-gradient(circle at top, #6a7cff, #4b2b7a);
            min-height: 100vh;
            padding: 50px 15px;
            font-family: "Inter", "Segoe UI", sans-serif;
        }

        .page-header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

            .page-header h1 {
                font-size: 38px;
                font-weight: 800;
            }

            .page-header p {
                opacity: .85;
            }

        .table-wrapper {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 30px 70px rgba(0,0,0,.35);
        }

        table {
            margin: 0;
        }

        thead {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

            thead th {
                padding: 18px;
                font-size: 13px;
                text-transform: uppercase;
                letter-spacing: 1px;
                border: none;
            }

        tbody tr {
            transition: all .25s ease;
        }

            tbody tr:hover {
                background: rgba(102,126,234,.08);
                transform: scale(1.01);
            }

        td {
            padding: 18px;
            vertical-align: middle;
            border: none;
        }

        .rank {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
            color: white;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

            .rank.top {
                background: linear-gradient(135deg, #f7971e, #ffd200);
                color: #2d3748;
            }

        .movie-title {
            font-weight: 700;
            font-size: 16px;
            color: #2d3748;
        }

        .poster {
            width: 90px;
            height: 130px;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,.25);
            transition: transform .3s ease;
        }

            .poster:hover {
                transform: scale(1.08);
            }

            .poster img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .rating {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #ffd89b, #ffb347);
            padding: 8px 18px;
            border-radius: 999px;
            font-weight: 800;
        }

        .imdb-link {
            border-radius: 999px;
            padding: 10px 22px;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .poster {
                width: 65px;
                height: 95px;
            }

            .page-header h1 {
                font-size: 26px;
            }
        }
    </style>
</head>

<body>

    <div class="container">

        <div class="page-header">
            <h1>🎬 IMDb Top 100</h1>
            <p>Tüm zamanların en yüksek puanlı filmleri</p>
        </div>

        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sıra</th>
                        <th>Film</th>
                        <th>Poster</th>
                        <th>Puan</th>
                        <th>IMDb</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="rank @(item.rank <= 3 ? "top" : "")">
                                    @item.rank
                                </div>
                            </td>
                            <td class="movie-title">
                                @item.title
                            </td>
                            <td>
                                <div class="poster">
                                    <img src="@item.big_image" alt="@item.title" />
                                </div>
                            </td>
                            <td>
                                <div class="rating">
                                    <i class="fas fa-star"></i> @item.rating
                                </div>
                            </td>
                            <td>
                                <a href="@item.imdb_link"
                                   target="_blank"
                                   class="btn btn-dark imdb-link">
                                    <i class="fab fa-imdb"></i> IMDb
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</body>
</html>
