@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Otel Fotoğrafları</title>

    <!-- Swiper -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <style>
        body {
            margin: 0;
            background: #0f1115;
            color: white;
            font-family: "Inter", "Segoe UI", sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .top-bar {
            padding: 15px 25px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: rgba(0,0,0,.5);
            backdrop-filter: blur(10px);
            z-index: 10;
        }

            .top-bar h1 {
                font-size: 18px;
                margin: 0;
                font-weight: 600;
            }

            .top-bar a {
                color: white;
                text-decoration: none;
                font-size: 14px;
                opacity: .8;
            }

        .swiper {
            flex: 1;
            width: 100%;
        }

        .swiper-slide {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #000;
        }

            .swiper-slide img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }

        .empty-state {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: .7;
            font-size: 16px;
        }
    </style>
</head>

<body>

    <!-- TOP BAR -->
    <div class="top-bar">
        <a href="javascript:history.back()">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
        <h1>Otel Fotoğrafları</h1>
        <span></span>
    </div>


    <div class="swiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl1" alt="Otel Fotoğrafı" />
            </div>
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl2" alt="Otel Fotoğrafı" />
            </div>
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl3" alt="Otel Fotoğrafı" />
            </div>
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl4" alt="Otel Fotoğrafı" />
            </div>
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl5" alt="Otel Fotoğrafı" />
            </div>
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl6" alt="Otel Fotoğrafı" />
            </div>
            <div class="swiper-slide">
                <img src="@ViewBag.PhotoUrl7" alt="Otel Fotoğrafı" />
            </div>

        </div>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

    <script>
        const swiper = new Swiper(".swiper", {
            loop: true,
            spaceBetween: 30,
            pagination: {
                el: ".swiper-pagination",
                clickable: true
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev"
            }
        });
    </script>

</body>
</html>
