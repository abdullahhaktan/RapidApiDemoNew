@model RapidApiDemoNew.Models.DashboardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daily Briefing</title>

    <style>
        :root {
            --bg-dark: #0f1115;
            --card-bg: #1a1d24;
            --accent: #5b8cff;
            --success: #4CAF50;
            --danger: #F44336;
            --text-muted: #9aa0aa;
            --radius: 16px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background: radial-gradient(circle at top, #1b1f2a, #0f1115);
            color: #fff;
            padding: 40px 20px;
        }

        .dashboard {
            max-width: 1200px;
            margin: auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 20px;
        }

        .page-header {
            grid-column: 1 / -1;
            text-align: center;
            margin-bottom: 10px;
        }

            .page-header h1 {
                font-size: 32px;
                font-weight: 700;
                margin: 0;
            }

            .page-header p {
                color: var(--text-muted);
                margin-top: 6px;
            }

        .section-title {
            grid-column: 1 / -1;
            margin-top: 30px;
            font-size: 13px;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            color: var(--text-muted);
        }

        .card {
            background: linear-gradient(180deg, #1c202b, var(--card-bg));
            border-radius: var(--radius);
            padding: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,.35);
            transition: all .3s ease;
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 45px rgba(0,0,0,.5);
            }

        .metric-title {
            font-size: 14px;
            color: var(--text-muted);
            margin-bottom: 8px;
            text-align: center;
        }

        .metric-value {
            font-size: 22px;
            font-weight: 700;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .badge {
            font-size: 12px;
            padding: 5px 10px;
            border-radius: 999px;
            font-weight: 600;
        }

        .positive {
            background: rgba(76,175,80,.15);
            color: var(--success);
        }

        .negative {
            background: rgba(244,67,54,.15);
            color: var(--danger);
        }

        .highlight {
            background: linear-gradient(135deg, #5b8cff, #8f6bff);
        }

        .weather img {
            width: 60px;
            height: 60px;
        }

        .weather small {
            color: rgba(255,255,255,.85);
        }
    </style>
</head>
<body>

    <div class="dashboard">

        <div class="page-header">
            <h1>📊 Daily Briefing</h1>
            <p>Günlük piyasa, hava durumu ve öneriler</p>
        </div>

        <!-- MARKET -->
        <div class="section-title">Market Watch</div>

        <div class="card">
            <div class="metric-title">USD / TRY</div>
            <div class="metric-value">
                @($"{Model.UsdTry:N2}₺")
                <span class="badge @(Model.UsdTryChange >= 0 ? "positive" : "negative")">
                    @((Model.UsdTryChange >= 0 ? "▲" : "▼") + $" {Math.Abs(Model.UsdTryChange):N1}%")
                </span>
            </div>
        </div>

        <div class="card">
            <div class="metric-title">EUR / TRY</div>
            <div class="metric-value">
                @($"{Model.EurTry:N2}₺")
                <span class="badge @(Model.EurTryChange >= 0 ? "positive" : "negative")">
                    @((Model.EurTryChange >= 0 ? "▲" : "▼") + $" {Math.Abs(Model.EurTryChange):N1}%")
                </span>
            </div>
        </div>

        <div class="card">
            <div class="metric-title">BTC / USD</div>
            <div class="metric-value">
                @($"{Model.BtcUsd:N2}$")
                <span class="badge @(Model.BtcChange >= 0 ? "positive" : "negative")">
                    @((Model.BtcChange >= 0 ? "▲" : "▼") + $" {Math.Abs(Model.BtcChange):N1}%")
                </span>
            </div>
        </div>

        <div class="card">
            <div class="metric-title">ETH / USD</div>
            <div class="metric-value">
                @($"{Model.EthUsd:N2}$")
                <span class="badge @(Model.EthChange >= 0 ? "positive" : "negative")">
                    @((Model.EthChange >= 0 ? "▲" : "▼") + $" {Math.Abs(Model.EthChange):N1}%")
                </span>
            </div>
        </div>

        <!-- WEATHER -->
        <div class="section-title">İstanbul Hava Durumu</div>

        <div class="card weather highlight">
            <!-- görsel url eklenecek -->
            <img src="@ViewBag.weather" alt="Weather" />
            <h2>@($"{ViewBag.C}°C")</h2>
            <small>@ViewBag.WeatherDescription</small>
            <small>💨 @ViewBag.WindSpeed m/s · 💧 @ViewBag.Humidity%</small>
        </div>

    </div>

</body>
</html>
